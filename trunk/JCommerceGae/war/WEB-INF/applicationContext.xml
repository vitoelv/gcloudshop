<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">  
    
  <bean id="myTxManager" class="com.jcommerce.core.dao.impl.MyTxManager">
  </bean>


  
    <bean id="DAO" class="com.jcommerce.core.dao.impl.DAOImpl">

	</bean>
	
    <bean id="DefaultManagerImpl" class="com.jcommerce.core.service.impl.DefaultManagerImpl">
		<property name="dao">
			<ref local="DAO"/>
		</property>
	</bean>

    <bean id="CustomizedManagerImpl" class="com.jcommerce.core.service.impl.CustomizedManagerImpl">
		<property name="dao">
			<ref local="DAO"/>
		</property>
	</bean>
    <bean id="WebManagerImpl" class="com.jcommerce.core.service.impl.WebManagerImpl">
		<property name="dao">
			<ref local="DAO"/>
		</property>
	</bean>
	
    <bean id="DefaultManager"
      class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
    <property name="transactionManager" ref="myTxManager"/>
    <property name="target" ref="DefaultManagerImpl"/>
    <property name="transactionAttributes">
      <props>
        <prop key="tx*">PROPAGATION_REQUIRED</prop>
        <prop key="*">PROPAGATION_NEVER</prop>
      </props>
    </property>
  </bean>
    
   <bean id="CustomizedManager"
      class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
    <property name="transactionManager" ref="myTxManager"/>
    <property name="target" ref="CustomizedManagerImpl"/>
    <property name="transactionAttributes">
      <props>
        <!--prop key="get*">PROPAGATION_NEVER</prop>
        < prop key="someOtherBusinessMethod">PROPAGATION_REQUIRES_NEW</prop -->
        <prop key="tx*">PROPAGATION_REQUIRED</prop>
        <prop key="*">PROPAGATION_NEVER</prop>
      </props>
    </property>
  </bean>
  
  <bean id="WebManager"
      class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
    <property name="transactionManager" ref="myTxManager"/>
    <property name="target" ref="WebManagerImpl"/>
    <property name="transactionAttributes">
      <props>
        <!--prop key="get*">PROPAGATION_NEVER</prop>
        < prop key="someOtherBusinessMethod">PROPAGATION_REQUIRES_NEW</prop -->
        <prop key="tx*">PROPAGATION_REQUIRED</prop>
        <prop key="*">PROPAGATION_NEVER</prop>
      </props>
    </property>
  </bean>
  
   <bean id="PaymentMetaManager" class="com.jcommerce.core.service.payment.impl.PaymentMetaManagerImpl">
     <property name="pluginFolder">
     	<value>D:\Program Files\apache-tomcat-5.5.27\webapps\jcommerce\WEB-INF\modules\payment</value>
     </property>
	 <property name="dao">
		<ref local="DAO"/>
	 </property>
   </bean>
  
  
   <bean id="ShippingMetaManager" class="com.jcommerce.core.service.shipping.impl.ShippingMetaManagerImpl">
     <property name="pluginFolder">
     	<value>D:\Program Files\apache-tomcat-5.5.27\webapps\jcommerce\WEB-INF\modules\payment</value>
     </property>
	 <property name="dao">
		<ref local="DAO"/>
	 </property>
   </bean>
   
   <bean id="ShopConfigManager" class="com.jcommerce.core.service.config.ShopConfigManagerImpl">
	 <property name="dao">
		<ref local="DAO"/>
	 </property>
   </bean>   
    <!-- Add Managers here -->
</beans>